&GLOBAL
  PROJECT Si_bulk8
  RUN_TYPE ENERGY_FORCE
  PRINT_LEVEL LOW
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  &SUBSYS
    &KIND Mg
      ELEMENT	Mg
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q10
    &END KIND 
    &KIND O
      Element O
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q6
    &END KIND
    &CELL
      A     0.0000000000000   3.9807078          3.9807078
      B     3.9807078         0.0000000000000    3.9807078
      C     3.9807078         3.9807078          0.0000000000000
    &END CELL
    &COORD
      Mg    0.000000000    0.000000000    0.000000000
      O     3.9807078    0.000000000    0.000000000
    &END COORD
  &END SUBSYS
  &DFT
    BASIS_SET_FILE_NAME  BASIS_SET
    POTENTIAL_FILE_NAME  GTH_POTENTIALS
    &QS
      EPS_DEFAULT 1.0E-10
    &END QS
    &MGRID
      NGRIDS 4
      CUTOFF 300
      REL_CUTOFF 60
    &END MGRID

    &PRINT               
       &MO_CUBES
       WRITE_CUBE .FALSE. 
       NHOMO 1            
       NLUMO 1          
       &END
    &END

    &XC
      &XC_FUNCTIONAL LDA
      &END XC_FUNCTIONAL
    &END XC
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-7
      MAX_SCF 300
      &DIAGONALIZATION  ON
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      &MIXING  T
        METHOD BROYDEN_MIXING
        ALPHA 0.4
        NBROYDEN 8
      &END MIXING
    &END SCF
  &END DFT
  &PRINT
    &FORCES ON
    &END FORCES
  &END PRINT
&END FORCE_EVAL
